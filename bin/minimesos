#!/bin/sh

VERSION=latest

DOCKER_BIN=/usr/local/bin/docker
if [ ! -f $DOCKER_BIN ]; then
    DOCKER_BIN=/usr/bin/docker
fi

docker run -v $PWD:/tmp/minimesos -v /var/lib/docker:/var/lib/docker -v /var/run/docker.sock:/var/run/docker.sock -v $DOCKER_BIN:$DOCKER_BIN -v /sys/fs/cgroup:/sys/fs/cgroup containersol/minimesos:$VERSION $@
